<h3>詳細</h3>

<table>
 <tr>
  <th>タイトル</th>
  <td><%= @post.title %></td>
 </tr>
 <tr>
  <th>開始日</th>
  <td><%= @post.start&.strftime("%Y年 %m月 %d日") %></td>
 </tr>
 <tr>
  <th>終了日</th>
  <td><%= @post.finish&.strftime("%Y年 %m月 %d日") %></td>
 </tr>
 <tr>
  <th>終日</th>
  <td>
   <% if @post.day == true %>
    <%= "○" %>
    <% end %>
  </td>
 </tr>

  <th>スケジュールメモ</th>
  <td><%= @post.memo %></td>

</table>

<div>
 <ul>
  <li><%= link_to "一覧に戻る", :posts %></li>
 </ul>
 <ul>
  <li><%= link_to "編集", [:edit, @post] %></li>
 </ul>
 <ul>
  <li><%= link_to "削除", @post, data: {turbo_method: :delete, turbo_confirm: "予定を削除しますか？"} %></li>
 </ul>
</div>